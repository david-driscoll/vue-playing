{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "lint",
            "problemMatcher": [
                "$tslint5"
            ]
        },
        {
            "label": "build and watch",
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "fileLocation": "absolute",
                    "applyTo": "allDocuments",
                    "pattern": [
                        {
                            "regexp": "\\s+?\\[tsl\\] (ERROR|WARNING) in (.*)\\((\\d+,\\d+)\\)",
                            "severity": 1,
                            "file": 2,
                            "location": 3
                        },
                        {
                            "regexp": "\\s+?(.*?): (.*)",
                            "message": 2,
                            "code": 1
                        }
                    ]
                },
                {
                    "owner": "tslint",
                    "fileLocation": "absolute",
                    "applyTo": "allDocuments",
                    "pattern": [
                        {
                            "regexp": "(ERROR|WARNING): \\((.*)\\) (.+)\\[(\\d+, \\d+)\\]: (.*)",
                            "severity": 1,
                            "code": 2,
                            "file": 3,
                            "location": 4,
                            "message": 5
                        }
                    ]
                }
            ]
        }
    ]
}